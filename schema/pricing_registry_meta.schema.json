{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://llm-pricing-registry.dev/schema/pricing_registry_meta.schema.json",
  "title": "Pricing registry metadata",
  "type": "object",
  "required": ["pricing_version", "published_at", "currency", "schema_version"],
  "additionalProperties": false,
  "properties": {
    "pricing_version": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
    },
    "published_at": {
      "type": "string",
      "format": "date-time"
    },
    "currency": {
      "type": "string",
      "const": "USD"
    },
    "schema_version": {
      "type": "integer",
      "const": 1
    }
  }
}
